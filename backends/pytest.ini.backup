# Python Test Configuration for TalentSphere
# PyTest settings and configuration

[tool:pytest]
testpaths = tests
python_files = test_*.py *_test.py
python_classes = Test*
python_functions = test_*
addopts = 
    -v
    --strict-markers
    --strict-config
    --cov=backends
    --cov-report=html
    --cov-report=term-missing
    --cov-report=xml
    --cov-report=lcov
    --cov-fail-under=80
    --cov-config=pyproject.toml
    --durations=10
    --tb=short
    --disable-warnings
filterwarnings =
    ignore::UserWarning
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
markers =
    unit: Unit tests
    integration: Integration tests
    e2e: End-to-end tests
    api: API tests
    security: Security tests
    performance: Performance tests
    slow: Slow running tests
    smoke: Smoke tests
    acceptance: Acceptance tests
    auth: Authentication related tests
    database: Database related tests
    external: Tests that hit external services
    network: Tests that require network access
    redis: Tests that require Redis

# Minimum test version
minversion = 6.0

# Test discovery
collect_ignore = [
    "*/migrations/*",
    "*/venv/*",
    "*/env/*",
    "*/.env*",
    "*/dist/*",
    "*/build/*",
    "*/__pycache__/*"
]

# Logging
log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)8s] %(message)s (%(filename)s:%(lineno)s)
log_cli_date_format = %Y-%m-%d %H:%M:%S

# Timeout (in seconds)
timeout = 300
timeout_method = thread

# Parallel execution
workers = auto
maxfail = 10
disable_test_id_autogeneration = true

# Monkey patching
faulthandler = true
console_output_style = progress

# File execution
run_stdout = true
run_stdout_log_append = true

# Coverage configuration (in addition to pyproject.toml)
[coverage:run]
source = backends
omit = 
    */tests/*
    */migrations/*
    */venv/*
    */__pycache__/*
    */conftest.py
    */test_*.py
    __pycache__

[coverage:report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == "__main__":.
    class .*\bProtocol\):
    @(abc\.)?abstractmethod