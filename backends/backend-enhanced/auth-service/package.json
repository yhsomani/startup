{
  "name": "talentsphere-auth-service",
  "version": "1.0.0",
  "description": "TalentSphere Authentication Service - Enterprise microservice for user authentication and authorization with comprehensive security",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "jsdoc -c jsdoc.json -r -d docs .",
    "docker:build": "docker build -t talentsphere/auth-service .",
    "docker:run": "docker run -p 3001:3001 talentsphere/auth-service",
    "migrate": "node -e \"require('./index.js').migrate()\"",
    "seed": "node -e \"require('./index.js').seed()\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/talentsphere/auth-service"
  },
  "keywords": [
    "talentsphere",
    "authentication",
    "authorization",
    "jwt",
    "microservice",
    "enterprise",
    "security",
    "postgresql",
    "nodejs",
    "express"
  ],
  "author": "TalentSphere Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talentsphere/auth-service/issues"
  },
  "homepage": "https://github.com/talentsphere/auth-service#readme"
}
