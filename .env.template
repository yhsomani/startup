# ==============================================
# TalentSphere - Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your SECURE values

# ==============================================
# API Gateway
# ==============================================
GATEWAY_PORT=8000
GATEWAY_SSL_ENABLED=true

# ==============================================
# Authentication & Security
# ==============================================
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_NEW_JWT_SECRET_HERE
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=GENERATE_NEW_REFRESH_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=GENERATE_NEW_SESSION_SECRET_HERE
ENCRYPTION_KEY=GENERATE_NEW_ENCRYPTION_KEY_HERE
CORS_ORIGIN=http://localhost:3100,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Database (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5440
DB_NAME=talentsphere
DB_USER=postgres
DB_PASSWORD=SECURE_DATABASE_PASSWORD_HERE
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ==============================================
# Message Queue (RabbitMQ)
# ==============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_URL=amqp://${RABBITMQ_HOST}:${RABBITMQ_PORT}

# ==============================================
# Backend Services
# ==============================================

# Flask (Auth, Challenges, Code Execution)
FLASK_PORT=5000
FLASK_ENV=production
FLASK_DEBUG=false

# .NET (Video Streaming)
DOTNET_PORT=5062
ASPNETCORE_ENVIRONMENT=Production

# Spring Boot (Progress Tracking)
SPRING_PORT=8080
SPRING_PROFILES_ACTIVE=production

# Node.js (Notifications)
NODE_PORT=3030
NODE_ENV=production

# ==============================================
# Phase 10 Services
# ==============================================

# AI Assistant
ASSISTANT_PORT=5005
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4

# Recruitment
RECRUITMENT_PORT=5006

# Gamification
GAMIFICATION_PORT=5007

# ==============================================
# Frontend MFEs
# ==============================================
SHELL_PORT=3000
LMS_PORT=3001
CHALLENGE_PORT=3002

# API Base URL (for frontend)
VITE_API_BASE_URL=http://localhost:8000

# ==============================================
# Monitoring & Observability
# ==============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3011
ENABLE_METRICS=true

# ==============================================
# Cloud Storage (for video files)
# ==============================================
# AWS S3
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY_HERE
AWS_REGION=us-east-1
S3_BUCKET_NAME=talentsphere-videos

# Or Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=YOUR_AZURE_CONNECTION_STRING_HERE
# AZURE_STORAGE_CONTAINER=videos

# ==============================================
# Email Service (for notifications)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=YOUR_EMAIL@gmail.com
SMTP_PASSWORD=YOUR_APP_PASSWORD_HERE
EMAIL_FROM=noreply@talentsphere.io

# ==============================================
# Production Settings
# ==============================================
ENVIRONMENT=development
LOG_LEVEL=info
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==============================================
# Feature Flags
# ==============================================
ENABLE_AI_ASSISTANT=true
ENABLE_CODE_EXECUTION=true
ENABLE_RECRUITMENT=true
ENABLE_GAMIFICATION=true

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SECURE_REDIS_PASSWORD_HERE
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}