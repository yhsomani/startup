{
  "name": "talentsphere-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for TalentSphere platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=30000",
    "test:services": "jest --testPathPattern=services",
    "test:api": "jest --testPathPattern=api",
    "test:security": "jest --testPathPattern=security",
    "test:performance": "jest --testPathPattern=performance",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:verbose": "jest --verbose",
    "lint": "eslint tests/**/*.test.js",
    "lint:fix": "eslint tests/**/*.test.js --fix",
    "clean": "rimraf coverage/ test-results/ .nyc_output/",
    "pretest": "npm run clean",
    "posttest": "npm run test:coverage:report",
    "test:coverage:report": "codecov",
    "test:mutate": "stryker run",
    "validate": "npm run lint && npm run test:unit"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "backends/**/*.js",
      "shared/**/*.js",
      "!backends/**/node_modules/**",
      "!backends/**/dist/**",
      "!shared/**/node_modules/**",
      "!**/coverage/**",
      "!**/test-results/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json",
      "cobertura"
    ],
    "coverageThresholds": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./shared/": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "./backends/": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "collectCoverage": true,
    "notify": true,
    "notifyMode": "failure-change",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "outputDirectory": "test-results",
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/../$1",
      "^@shared/(.*)$": "<rootDir>/../shared/$1",
      "^@utils/(.*)$": "<rootDir>/utils/$1"
    },
    "testSequencer": "<rootDir>/tests/custom-sequencer.js",
    "maxWorkers": "50%",
    "maxConcurrency": 5,
    "forceExit": true,
    "detectOpenHandles": true,
    "errorOnDeprecated": true,
    "globals": {
      "TEST_MODE": true
    }
  },
  "dependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^5.1.0",
    "uuid": "^9.0.0",
    "pg": "^8.8.3",
    "nock": "^13.3.8",
    "sinon": "^17.0.1",
    "faker": "^6.6.6",
    "axios": "^1.6.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@shelf/jest-mongodb": "^4.1.4",
    "babel-jest": "^29.7.0",
    "codecov": "^3.8.3",
    "eslint": "^8.54.0",
    "eslint-config-jest": "^6.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "nock": "^13.3.8",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "stryker": "^7.3.0",
    "supertest": "^6.3.3",
    "testcontainers": "^9.2.0",
    "@testcontainers/postgresql": "^9.2.0",
    "@testcontainers/redis": "^9.2.0"
  },
  "dependencies": {
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.4.0",
    "mocha": "^10.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "author": "TalentSphere Team",
  "license": "MIT"
}