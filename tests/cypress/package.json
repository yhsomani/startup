{
  "name": "talentsphere-e2e-tests",
  "version": "1.0.0",
  "description": "Comprehensive end-to-end tests for TalentSphere platform",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome",
    "cypress:headless": "cypress run --headless",
    "test:auth": "cypress run --spec 'cypress/e2e/authentication.cy.ts'",
    "test:courses": "cypress run --spec 'cypress/e2e/course-learning.cy.ts'",
    "test:challenges": "cypress run --spec 'cypress/e2e/challenge-platform.cy.ts'",
    "test:ai": "cypress run --spec 'cypress/e2e/ai-assistant.cy.ts'",
    "test:recruitment": "cypress run --spec 'cypress/e2e/recruitment.cy.ts'",
    "test:all": "cypress run",
    "test:smoke": "cypress run --spec 'cypress/e2e/*.cy.ts' --reporter mochawesome",
    "test:critical": "cypress run --spec 'cypress/e2e/authentication.cy.ts,cypress/e2e/course-learning.cy.ts,cypress/e2e/challenge-platform.cy.ts'",
    "test:performance": "cypress run --config 'video=true,viewportWidth=1920,viewportHeight=1080'",
    "report:merge": "mochawesome-merge cypress/results/mochawesome.json > cypress/results/combined-report.json",
    "report:generate": "marge cypress/results/combined-report.json",
    "clean": "rimraf cypress/results cypress/videos cypress/screenshots"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.4",
    "@types/cypress": "^1.0.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "cypress": "^13.6.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "marge": "^6.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/support/step_definitions"
  },
  "reporter": "mochawesome",
  "reporterOptions": {
    "reportDir": "cypress/results",
    "overwrite": false,
    "html": false,
    "json": true,
    "timestamp": "mmddyyyy_HHMMss"
  }
}