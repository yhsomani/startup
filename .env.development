# TalentSphere Development Environment Configuration
# Copy this file to .env.development and update values as needed

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:GENERATE_STRONG_DEV_PASSWORD@localhost:5432/talentsphere_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=talentsphere_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=GENERATE_STRONG_DEV_PASSWORD
DATABASE_SSL=false
DATABASE_CONNECTION_TIMEOUT_MILLIS=10000
DATABASE_IDLE_TIMEOUT_MILLIS=30000
DATABASE_QUERY_TIMEOUT=30000
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_RETRIES=3
DATABASE_RETRY_DELAY=1000
DATABASE_MIN=2
DATABASE_MAX=10
DATABASE_KEEPALIVES_IDLE=30
DATABASE_KEEPALIVES_INTERVAL=30

# Security Configuration
JWT_SECRET=GENERATE_SECURE_DEV_SECRET_64_CHARS
ENCRYPTION_KEY=GENERATE_SECURE_DEV_SECRET_64_CHARS
API_SECRET=GENERATE_SECURE_DEV_SECRET_32_CHARS
HASH_SALT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ENABLE_CORS=true

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png
ENABLE_VIRUS_SCANNING=false
ENABLE_OCR=false
ENABLE_RESUME_PARSING=true
ANTIVIRUS_COMMAND=clamscan

# External Service Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password
REDIS_DB=0

# Email Configuration (Development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=dev@talentsphere.com
SMTP_PASSWORD=dev_smtp_password
SMTP_FROM_EMAIL=dev@talentsphere.com

# AWS Configuration (Development - Use LocalStack)
AWS_ACCESS_KEY_ID=GENERATE_DEV_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=GENERATE_DEV_AWS_SECRET_KEY
AWS_REGION=us-west-2
AWS_S3_BUCKET=talentsphere-dev-files

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=dev_elastic_user
ELASTICSEARCH_PASSWORD=dev_elastic_password
ELASTICSEARCH_SSL=false

# Service-Specific Ports
ANALYTICS_API_PORT=3009
RESUME_API_PORT=3004
NOTIFICATION_API_PORT=3007
NOTIFICATION_WS_PORT=8080
SEARCH_API_PORT=3006
VIDEO_API_PORT=3005
MESSAGING_API_PORT=3008
MESSAGING_WS_PORT=8081
PERFORMANCE_MONITORING_PORT=3010
AI_MATCHING_API_PORT=3011

# Analytics Service Configuration
ANALYTICS_RETENTION_DAYS=30
AGGREGATION_INTERVAL=hourly
ENABLE_REAL_TIME_AGGREGATION=true
ENABLE_EXECUTIVE_DASHBOARDS=true
ENABLE_USER_ENGAGEMENT_ANALYTICS=true
ENABLE_JOB_POSTING_ANALYTICS=true
ENABLE_REVENUE_ANALYTICS=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_USER_BEHAVIOR_TRACKING=true
ENABLE_CONVERSION_TRACKING=true

# Search Service Configuration
ENABLE_FULL_TEXT_SEARCH=true
SIMILARITY_THRESHOLD=0.7
MAX_RECOMMENDATIONS=10
DEFAULT_QUERY_LIMIT=20

# Video Service Configuration
VIDEO_PLATFORM=zoom
AUTO_RECORDING=true
MUTE_PARTICIPANTS_UPON_ENTRY=false
WAITING_ROOM=true
DURATION=60

# Notification Service Configuration
MESSAGE_RETENTION_DAYS=7
MAX_MESSAGE_LENGTH=5000
ENABLE_ATTACHMENTS=true
MAX_ATTACHMENT_SIZE=5242880

# Performance Monitoring Configuration
QUERY_CACHE_TIMEOUT=300000
SLOW_QUERY_THRESHOLD=1000

# Development Features
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_ERROR_STACK_TRACES=true

# Debug Configuration
DEBUG=talentsphere:*

# Rate Limiting (Relaxed for Development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Request Configuration
REQUEST_TIMEOUT=30000
MAX_PAYLOAD_SIZE=1048576
ENABLE_COMPRESSION=true

# Cache Configuration
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true
CACHE_MAX_SIZE=1000