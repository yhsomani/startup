{
  "name": "talentsphere-dev-tools",
  "version": "1.0.0",
  "description": "Development tools and hot reloading for TalentSphere",
  "main": "index.js",
  "scripts": {
    "dev": "node index.js",
    "dev:gateway": "node index.js --service=api-gateway",
    "dev:auth": "node index.js --service=auth-service",
    "dev:dashboard": "node index.js --service=dashboard",
    "lint": "eslint ../**/*.js --ignore-path ../.gitignore",
    "test": "jest ../**/*.test.js",
    "test:watch": "jest ../**/*.test.js --watch",
    "test:coverage": "jest ../**/*.test.js --coverage",
    "docs": "jsdoc ../**/*.js -d ../docs",
    "build": "npm run lint && npm run test && npm run docs"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "ws": "^8.13.0",
    "axios": "^1.4.0",
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "jsdoc": "^4.0.2",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "development",
    "hot-reload",
    "debugging",
    "tools",
    "productivity"
  ],
  "author": "TalentSphere Team",
  "license": "MIT"
}