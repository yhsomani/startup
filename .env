# TalentSphere Environment Variables - Development

# Application
NODE_ENV=development
PORT=8000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=talentsphere
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/talentsphere

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=dev-session-secret

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# MongoDB
MONGODB_URI=mongodb://localhost:27017/talentsphere
