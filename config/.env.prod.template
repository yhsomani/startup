# Production Environment Variables Template for TalentSphere
# Copy this file to .env.prod and update the values

# Database Configuration
POSTGRES_USER=talentsphere_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=talentsphere

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-min-32-chars-here

# Service Ports
FLASK_PORT=5000
ASSISTANT_PORT=5005
RECRUITMENT_PORT=5006
GAMIFICATION_PORT=5007
SPRINGBOOT_PORT=8080

API_GATEWAY_HTTP_PORT=8000
API_GATEWAY_HTTPS_PORT=443

# Enhanced Services
JOB_SERVICE_PORT=3003
NETWORK_SERVICE_PORT=3004
SEARCH_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006

# Frontend Services
SHELL_PORT=3000
LMS_PORT=3005
CHALLENGE_PORT=3006

# Node.js Services
NODE_ENV=production
NOTIFICATION_SERVICE_PORT=3030

# Security
FLASK_FLAGS_URL=http://flask:5000
CORS_ORIGINS=https://talentsphere.io,https://app.talentsphere.io

# Logging
LOG_LEVEL=info

# File Storage
UPLOAD_FOLDER=/app/uploads

# External Services
PROGRESS_SERVICE_URL=http://ts-backend-springboot:8080

# Monitoring
OPENAI_API_KEY=your-openai-api-key-here

# Cache Configuration
REDIS_URL=redis://redis:6379/0

# Message Broker
RABBITMQ_USER=talentsphere_user
RABBITMQ_PASSWORD=your-rabbitmq-password-here

# Spring Configuration
SPRING_PROFILES_ACTIVE=true

# Development Overrides (set to 'false' for production)
# DEVELOPMENT_MODE=false