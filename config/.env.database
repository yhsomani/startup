# ==============================================
# TalentSphere - Database Configuration
# ==============================================

# Primary Database Connection
DATABASE_URL=postgresql://postgres:postgres@db:5432/talentsphere

# Connection Components
DB_HOST=db
DB_PORT=5432
DB_NAME=talentsphere
DB_USER=postgres
DB_PASSWORD=postgres

# Connection Pool Settings (for production)
DB_POOL_SIZE=20
DB_MAX_RETRIES=3
DB_POOL_TIMEOUT=30

# Migration Settings
DB_MIGRATION_ENABLED=true
DB_MIGRATION_AUTO_APPLY=false

# Health Check Settings
DB_HEALTH_CHECK_ENABLED=true
DB_HEALTH_CHECK_INTERVAL=30s

# Cache Configuration
DB_CACHE_ENABLED=true
DB_CACHE_TTL=3600

# Logging Configuration
DB_LOG_LEVEL=info
DB_SLOW_QUERY_THRESHOLD=1000ms