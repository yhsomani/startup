# ==============================================
# TalentSphere Environment Configuration
# ==============================================
# Copy this file to .env and update values as needed

# ==============================================
# Environment Settings
# ==============================================
NODE_ENV=development
PORT=3000

# Service Specific Ports
JOB_LISTING_PORT=3008
USER_PROFILE_PORT=3009

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/talentsphere
DB_HOST=localhost
DB_PORT=5432
DB_NAME=talentsphere
DB_USER=talentsphere_user
DB_PASSWORD=secure_database_password_here

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# Security Configuration
# ==============================================
# JWT Secrets - GENERATE NEW ONES FOR PRODUCTION
JWT_SECRET=generated_jwt_secret_placeholder_64_chars_minimum_change_this
JWT_REFRESH_SECRET=generated_refresh_secret_placeholder_64_chars_minimum_change_this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Security
SESSION_SECRET=generated_session_secret_placeholder_64_chars_minimum_change_this

# Encryption Key (for sensitive data encryption)
ENCRYPTION_KEY=generated_encryption_key_32_chars_minimum

# API Secret for internal service communication
API_SECRET=generated_api_secret_48_chars_minimum_change_this

# ==============================================
# CORS Configuration
# ==============================================
# Development - allows localhost origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3100

# Production - Update with your actual domain
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# ==============================================
# External Services
# ==============================================
# Email Service (SendGrid, AWS SES, etc.)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@talentsphere.com
EMAIL_FROM_NAME=TalentSphere

# File Storage (AWS S3, Google Cloud Storage, etc.)
STORAGE_PROVIDER=aws_s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=talentsphere-files

# Payment Processing (Stripe, etc.)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your_sentry_dsn

# ==============================================
# AI Services
# ==============================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==============================================
# Feature Flags
# ==============================================
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_FEATURES=true

# ==============================================
# Development Settings
# ==============================================
# Only for development - NEVER use in production
DEBUG=true
MOCK_EXTERNAL_APIS=true
SKIP_EMAIL_VERIFICATION=false