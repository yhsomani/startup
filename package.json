{
  "name": "talentsphere",
  "version": "1.0.0",
  "description": "TalentSphere - Modern Recruitment Platform Microservices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --config jest.config.json",
    "test:unit": "jest --config jest.config.json --testPathPattern=unit",
    "test:integration": "jest --config jest.config.json --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:coverage": "jest --config jest.config.json --coverage",
    "test:watch": "jest --config jest.config.json --watch --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:smoke": "k6 run tests/load/k6-smoke.js",
    "test:load": "k6 run tests/load/k6-load.js",
    "test:stress": "k6 run tests/load/k6-stress.js",
    "test:load:report": "k6 run --out json=test-results/load-report.json tests/load/k6-load.js",
    "backup": "pwsh scripts/backup.ps1",
    "restore": "pwsh scripts/restore.ps1",
    "pre-commit": "lint-staged --allow-empty",
    "prepare": "husky install",
    "quality-check": "npm run lint && npm run format:check && npm run test:all",
    "services:start": "npm run start --workspaces --if-present",
    "services:dev": "npm run dev --workspaces --if-present",
    "services:test": "jest --config jest.config.json --workspaces --if-present --coverage",
    "services:lint": "eslint services/*/ --ext .js --ignore-path .gitignore",
    "config:validate": "node scripts/config-manager.js validate-all",
    "env:create": "node scripts/config-manager.js create-env",
    "docs:generate": "node scripts/docs-generator.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:lint": "eslint . --ext .js,.ts --config .eslintrc.json --plugin security",
    "build:check": "npm run lint && npm run test:all",
    "clean": "rm -rf coverage/ dist/ build/ logs/",
    "clean:deps": "npm ci --ignore-scripts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "express-http-proxy": "^2.1.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "mongodb": "^7.0.0",
    "talentsphere-shared-services": "^1.0.0",
    "uuid": "9.0.1",
    "validator": "^13.15.26",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@playwright/test": "^1.40.0",
    "@types/express": "^5.0.6",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^25.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "newrelic": "^13.11.0",
    "nodemon": "^3.0.1",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.9.3",
    "webpack-bundle-analyzer": "^5.2.0"
  },
  "workspaces": [
    "services/*",
    "frontends/*",
    "frontend/packages/*",
    "backend-enhanced/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "talentsphere",
    "recruitment",
    "microservices",
    "nodejs",
    "express",
    "javascript",
    "jobs",
    "analytics",
    "hr",
    "hr-tech"
  ],
  "author": "TalentSphere Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talentsphere/talentsphere"
  },
  "bugs": {
    "url": "https://github.com/talentsphere/talentsphere/issues"
  },
  "homepage": "https://talentsphere.com"
}
