{
  "name": "talentsphere",
  "version": "1.0.0",
  "description": "TalentSphere - Modern Recruitment Platform Microservices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --config jest.config.json",
    "test:unit": "jest --config jest.config.json --testPathPattern=unit",
    "test:integration": "jest --config jest.config.json --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "jest --config jest.config.json --coverage",
    "test:watch": "jest --config jest.config.json --watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run test:unit && npm run lint",
    "clean": "rm -rf coverage/ dist/ build/ logs/",
    "clean:all": "rm -rf node_modules/ coverage/ dist/ build/ logs/ && npm install",
    "security:audit": "npm audit --audit-level moderate",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "eslint-plugin-react": "^7.37.0",
    "express": "^4.21.0",
    "express-http-proxy": "^2.0.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.8.0",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "winston": "^3.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@playwright/test": "^1.40.0",
    "@types/express": "^5.0.6",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^25.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "jest": "^25.0.0",
    "lint-staged": "^15.5.2",
    "newrelic": "^13.11.0",
    "nodemon": "^3.0.1",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^1.2.1",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.9.3",
    "vite-plugin-compression": "^0.5.1",
    "webpack-bundle-analyzer": "^5.2.0"
  },
  "workspaces": [
    "services/*",
    "frontends/*",
    "frontend/packages/*",
    "backend-enhanced/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "talentsphere",
    "recruitment",
    "microservices",
    "nodejs",
    "express",
    "javascript",
    "jobs",
    "analytics",
    "hr",
    "hr-tech"
  ],
  "author": "TalentSphere Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talentsphere/talentsphere"
  },
  "bugs": {
    "url": "https://github.com/talentsphere/talentsphere/issues"
  },
  "homepage": "https://talentsphere.com"
}
