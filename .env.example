# TalentSphere Environment Variables Configuration

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
APP_NAME=TalentSphere
APP_VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL (primary database for backend services)
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/talentsphere

# MongoDB
MONGODB_URI=mongodb://localhost:27017/talentsphere
MONGODB_TEST_URI=mongodb://localhost:27017/talentsphere_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# .NET Backend (connection string override)
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=talentsphere;Username=postgres;Password=your_password_here

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secret (GENERATE NEW ONE FOR PRODUCTION)
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_HERE
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing
BCRYPT_ROUNDS=12

# Session
SESSION_SECRET=GENERATE_SECURE_SESSION_SECRET_HERE
SESSION_MAX_A=86400000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Gmail (less secure, use app password)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@talentsphere.com

# SendGrid (recommended for production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@talentsphere.com

# Mailgun (alternative)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.mailgun.org

# ===========================================
# AI/ML SERVICES
# ===========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=org-your-organization-id
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=AI_TEMPER2000
OPENATURE=0.7

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ===========================================
# FILE STORAGE
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=talentsphere-uploads

# Local storage (for development)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Payment processing
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Video processing
VIDEO_SERVICE_API_KEY=your-video-service-key
VIDEO_SERVICE_URL=https://api.video-service.com

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ===========================================
# MONITORING & LOGGING
# ===========================================
# New Relic
NEW_RELIC_APP_NAME=TalentSphere
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_LOG_LEVEL=info

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# CORS proxy settings
CORS_PROXY=http://localhost:3000

# ===========================================
# MICROSERVICES CONFIGURATION
# ===========================================
# Service URLs
API_GATEWAY_URL=http://localhost:3000
USER_SERVICE_URL=http://localhost:3001
JOB_SERVICE_URL=http://localhost:3002
APPLICATION_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005

# Frontend URLs
FRONTEND_URL=http://localhost:3000
SHELL_APP_URL=http://localhost:3000
LMS_APP_URL=http://localhost:3001
CHALLENGE_APP_URL=http://localhost:3002
DASHBOARD_APP_URL=http://localhost:3003

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Testing
TEST_DATABASE_URL=mongodb://localhost:27017/talentsphere_test
TEST_REDIS_DB=1
MOKKA_WATCH_OPTIONS=glob:"**/*.test.js"

# Development tools
DEBUG=talentsphere:*
CHROME_DEBUG_PORT=9222

# Hot reload
WATCH_MODE=true
LIVE_RELOAD=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify these for production deployment

# NODE_ENV=production
# PORT=80
# CORS_ORIGIN=https://talentsphere.com
# LOG_LEVEL=warn
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=50

# SSL Configuration (if not using reverse proxy)
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt

# ===========================================
# HASHICORP VAULT (Secret Management)
# ===========================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_SECRET_PATH=secret/data/talentsphere
VAULT_K8S_AUTH_ENABLED=false

# For production with K8s auth
# VAULT_K8S_AUTH_ROLE=talentsphere
# VAULT_K8S_SERVICE_ACCOUNT=vault-secrets
# Docker build
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest
DOCKER_BUILD_ARGS=--no-cache

# Docker compose
COMPOSE_PROJECT_NAME=talentsphere
COMPOSE_FILE=docker-compose.yml
COMPOSE_FILE_OVERRIDE=docker-compose.override.yml

# ===========================================
# CI/CD CONFIGURATION
# ===========================================
# GitHub Actions
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-username/talentsphere

# Deployment
DEPLOY_URL=https://api.talentsphere.com
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/talentsphere
DEPLOY_BRANCH=main

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_VIDEO_INTERVIEWS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Social login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_URL=https://api.talentsphere.com/webhooks

# Push notifications
PUSH_SERVICE_API_KEY=your-push-service-key
PUSH_SERVICE_ENDPOINT=https://push.service.com