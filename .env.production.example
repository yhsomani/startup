# TalentSphere Production Environment Configuration
# Copy this file to .env.production and update with actual production values
# WARNING: Never commit this file with real credentials!

# Application Environment
NODE_ENV=production
LOG_LEVEL=warn
PORT=3000

# Database Configuration
DATABASE_HOST=prod-db-cluster.talentsphere.com
DATABASE_PORT=5432
DATABASE_NAME=talentsphere_prod
DATABASE_USER=talentsphere_prod
DATABASE_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD
DATABASE_SSL=true
DATABASE_CONNECTION_TIMEOUT_MILLIS=10000
DATABASE_IDLE_TIMEOUT_MILLIS=30000
DATABASE_QUERY_TIMEOUT=30000
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_RETRIES=3
DATABASE_RETRY_DELAY=1000
DATABASE_MIN=10
DATABASE_MAX=50
DATABASE_KEEPALIVES_IDLE=30
DATABASE_KEEPALIVES_INTERVAL=30

# Security Configuration
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MIN_32_CHARS
ENCRYPTION_KEY=CHANGE_ME_PRODUCTION_ENCRYPTION_KEY_MIN_32_CHARS
API_SECRET=CHANGE_ME_PRODUCTION_API_SECRET_MIN_16_CHARS
HASH_SALT_ROUNDS=14

# CORS Configuration
CORS_ORIGIN=https://talentsphere.com
ENABLE_CORS=false

# File Upload Configuration
UPLOAD_DIR=/var/uploads/production
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png
ENABLE_VIRUS_SCANNING=true
ENABLE_OCR=true
ENABLE_RESUME_PARSING=true
ANTIVIRUS_COMMAND=clamscan

# External Service Configuration
REDIS_HOST=prod-redis-cluster.talentsphere.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME_SENDGRID_PRODUCTION_API_KEY
SMTP_FROM_EMAIL=noreply@talentsphere.com

# AWS Configuration
AWS_ACCESS_KEY_ID=CHANGE_ME_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_PRODUCTION_AWS_SECRET_KEY
AWS_REGION=us-west-2
AWS_S3_BUCKET=talentsphere-prod-files

# Elasticsearch Configuration
ELASTICSEARCH_HOST=prod-es-cluster.talentsphere.com
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=prod_user
ELASTICSEARCH_PASSWORD=CHANGE_ME_ES_PASSWORD
ELASTICSEARCH_SSL=true

# Service-Specific Ports
ANALYTICS_API_PORT=3009
RESUME_API_PORT=3004
NOTIFICATION_API_PORT=3007
NOTIFICATION_WS_PORT=8080
SEARCH_API_PORT=3006
VIDEO_API_PORT=3005
MESSAGING_API_PORT=3008
MESSAGING_WS_PORT=8081
PERFORMANCE_MONITORING_PORT=3010
AI_MATCHING_API_PORT=3011

# Analytics Service Configuration
ANALYTICS_RETENTION_DAYS=365
AGGREGATION_INTERVAL=daily
ENABLE_REAL_TIME_AGGREGATION=true
ENABLE_EXECUTIVE_DASHBOARDS=true
ENABLE_USER_ENGAGEMENT_ANALYTICS=true
ENABLE_JOB_POSTING_ANALYTICS=true
ENABLE_REVENUE_ANALYTICS=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_USER_BEHAVIOR_TRACKING=true
ENABLE_CONVERSION_TRACKING=true

# Search Service Configuration
ENABLE_FULL_TEXT_SEARCH=true
SIMILARITY_THRESHOLD=0.8
MAX_RECOMMENDATIONS=20
DEFAULT_QUERY_LIMIT=50

# Video Service Configuration
VIDEO_PLATFORM=zoom
AUTO_RECORDING=true
MUTE_PARTICIPANTS_UPON_ENTRY=true
WAITING_ROOM=true
DURATION=60

# Notification Service Configuration
MESSAGE_RETENTION_DAYS=90
MAX_MESSAGE_LENGTH=5000
ENABLE_ATTACHMENTS=true
MAX_ATTACHMENT_SIZE=5242880

# Performance Monitoring Configuration
QUERY_CACHE_TIMEOUT=600000
SLOW_QUERY_THRESHOLD=500

# Production Features
ENABLE_API_DOCS=false
ENABLE_SWAGGER_UI=false
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_ERROR_STACK_TRACES=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
REQUEST_TIMEOUT=30000
MAX_PAYLOAD_SIZE=1048576
ENABLE_COMPRESSION=true

# Cache Configuration
CACHE_TTL=7200
ENABLE_QUERY_CACHE=true
CACHE_MAX_SIZE=10000

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HELMET=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_APM_MONITORING=true

# Video Service Integration
ZOOM_API_KEY=CHANGE_ME_ZOOM_API_KEY
ZOOM_API_SECRET=CHANGE_ME_ZOOM_API_SECRET
ZOOM_WEBHOOK_SECRET=CHANGE_ME_ZOOM_WEBHOOK_SECRET

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Compliance
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_YEARS=7
GDPR_COMPLIANCE=true