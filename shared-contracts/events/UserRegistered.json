{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talentsphere.com/schemas/events/UserRegistered.json",
  "title": "UserRegistered",
  "description": "Event fired when a new user registers",
  "type": "object",
  "required": ["messageId", "timestamp", "data"],
  "properties": {
    "messageId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "data": {
      "type": "object",
      "required": ["userId", "email"],
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
