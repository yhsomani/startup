# ==============================================
# TalentSphere - Environment Configuration (SECURE)
# ==============================================
# WARNING: This file contains SECURE values and should NEVER be committed to version control
# Use .env.template as the reference and generate your own secure secrets

# ==============================================
# Authentication & Security (SECURE SECRETS)
# ==============================================
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_64_CHAR_HEX_SECRET_HERE
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=GENERATE_64_CHAR_HEX_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=GENERATE_64_CHAR_HEX_SECRET_HERE
ENCRYPTION_KEY=GENERATE_64_CHAR_HEX_SECRET_HERE
CORS_ORIGIN=http://localhost:3100,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Database (PostgreSQL) - UPDATE WITH SECURE VALUES
# ==============================================
DB_HOST=localhost
DB_PORT=5440
DB_NAME=talentsphere
DB_USER=postgres
DB_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://postgres:GENERATE_STRONG_PASSWORD_HERE@localhost:5440/talentsphere

# ==============================================
# Message Queue (RabbitMQ)
# ==============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_URL=amqp://localhost:5672

# ==============================================
# Redis Configuration - UPDATE WITH SECURE PASSWORD
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
REDIS_URL=redis://:GENERATE_STRONG_PASSWORD_HERE@localhost:6379

# ==============================================
# API Keys and External Services - REPLACE WITH REAL VALUES
# ==============================================
OPENAI_API_KEY=YOUR_ACTUAL_OPENAI_KEY_HERE
AWS_ACCESS_KEY_ID=YOUR_ACTUAL_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_ACTUAL_AWS_SECRET_KEY_HERE
SMTP_PASSWORD=YOUR_ACTUAL_SMTP_PASSWORD_HERE

# ==============================================
# Development/Development Mode - Keep these for local dev
# ==============================================
GATEWAY_PORT=8000
FLASK_PORT=5000
DOTNET_PORT=5062
SPRING_PORT=8080
NODE_PORT=3030
ASSISTANT_PORT=5005
RECRUITMENT_PORT=5006
GAMIFICATION_PORT=5007
SHELL_PORT=3000
LMS_PORT=3001
CHALLENGE_PORT=3002
PROMETHEUS_PORT=9090
GRAFANA_PORT=3011
VITE_API_BASE_URL=http://localhost:8000
ENVIRONMENT=development
LOG_LEVEL=info