{
  "name": "TalentSphere - Learning Management System",
  "short_name": "TalentSphere",
  "description": "Comprehensive learning management system with courses, discussions, and interactive learning tools",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "theme_color": "#4f46e5",
  "background_color": "#ffffff",
  "lang": "en",
  "dir": "ltr",
  "categories": ["education", "productivity"],
