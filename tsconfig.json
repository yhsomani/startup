{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "checkJs": false,
    "allowJs": true
  },
  "include": ["api-gateway/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist", "backends", "frontend", "tests", "shared/**/*.js", "services/**/*.js", "**/*.js"]
}
