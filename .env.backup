# ==============================================
# Backend Services
# ==============================================

# Flask (Auth, Challenges, Code Execution)
FLASK_PORT=5000
FLASK_ENV=production
FLASK_DEBUG=false

# .NET (Video Streaming)
DOTNET_PORT=5062
ASPNETCORE_ENVIRONMENT=Production

# Spring Boot (Progress Tracking)
SPRING_PORT=8080
SPRING_PROFILES_ACTIVE=production

# Node.js (Notifications)
NODE_PORT=3030
NODE_ENV=production

# ==============================================
# Phase 10 Services
# ==============================================

# AI Assistant
ASSISTANT_PORT=5005
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

# Recruitment
RECRUITMENT_PORT=5006

# Gamification
GAMIFICATION_PORT=5007

# ==============================================
# Frontend MFEs
# ==============================================
SHELL_PORT=3000
LMS_PORT=3001
CHALLENGE_PORT=3002

# API Base URL (for frontend)
VITE_API_BASE_URL=http://localhost:8000

# ==============================================
# Monitoring & Observability
# ==============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3011
ENABLE_METRICS=true

# ==============================================
# Cloud Storage (for video files)
# ==============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=talentsphere-videos

# Or Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_STORAGE_CONTAINER=videos

# ==============================================
# Email Service (for notifications)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@talentsphere.io

# ==============================================
# Production Settings
# ==============================================
ENVIRONMENT=development
LOG_LEVEL=info
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==============================================
# Feature Flags
# ==============================================
ENABLE_AI_ASSISTANT=true
ENABLE_CODE_EXECUTION=true
ENABLE_RECRUITMENT=true
ENABLE_GAMIFICATION=true
