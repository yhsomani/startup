{
  "name": "talentsphere-test-framework",
  "version": "1.0.0",
  "description": "Testing framework and utilities for TalentSphere platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "supertest": "^6.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "talentsphere",
    "testing",
    "framework",
    "utilities",
    "unit-testing",
    "integration-testing",
    "e2e-testing"
  ],
  "author": "TalentSphere Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
